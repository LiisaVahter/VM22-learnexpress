         <p>
        <label for="fname">first name</label><br>
        <input type="fname" type="text"placeholder="First name" name="fname"> 
        </p>
  <p>
        <label for="lname">last name</label><br>
        <input type="lname" type="text"placeholder="Last name" name="lname">
          </p>
 <p>
        <label for="age">Age</label><br>
        <input id="age" type="number"  min="0" max="123" step="1" placeholder="Age" name="age"> 
        </p>
    <p>
        <label for="phone">phone number</label><br>
        <input type="phone" type="number" placeholder="Phone number" name="phone"> 
        </p>
        <p>
            <input type="submit"value="Submit">
        </p>
    </form>
    {% endblock %}