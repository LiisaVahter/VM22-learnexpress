    {% extends "partials/layout.njk"%}
    {% block content %}
    <h1>Liisa<sub>meow</sub></h1>
    {% if fname and lname and age and phone %}
    <p>hello {{ fname }} {{ lname }}, you are {{ age }} years old</p>
    {% endif %}
